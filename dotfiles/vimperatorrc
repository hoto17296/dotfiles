" vim: set ft=vimperator:

" 補完設定
set autocomplete
set complete=sl

" ブラウザのタイトル
set titlestring=Firefox

" j/kの移動量を5倍に
map j 5<C-e>
map k 5<C-y>

" ヒントモードをアルファベットに
set hintchars=ifjklasdhguonmerwc

" コマンドモードでIMEを自動でOFF
style -name commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

" 自動入力欄フォーカスを無効化
set focuscontent

" タブを閉じたら左側のタブにフォーカスする
nnoremap d D
nnoremap D d

" すべて選択
noremap <C-a> i<C-a>
inoremap <C-a> <Ins><C-a><Ins>
cnoremap <C-a> <Ins><C-a><Ins>

" セミコロンでもコマンド使えるようにする
noremap ; :

" ,r で vimperatorrc をリロード
map ,r :source ~/.vimperatorrc<CR>
